<body id="body">
    <div class="container">
        <h1>Nguyễn Tấn Phát</h1>
        <p>Sinh viên năm 2 ngành Kỹ thuật Phần mềm</p>
        
        <div class="clock" id="clock">00:00:00</div>
        
        <div class="color-buttons">
            <div class="color-btn" style="background: #f0f0f0;" onclick="changeBackground('#f0f0f0')"></div>
            <div class="color-btn" style="background: #e8f4f8;" onclick="changeBackground('#e8f4f8')"></div>
            <div class="color-btn" style="background: #f8e8e8;" onclick="changeBackground('#f8e8e8')"></div>
            <div class="color-btn" style="background: #e8f8e8;" onclick="changeBackground('#e8f8e8')"></div>
            <div class="color-btn" style="background: #f8f0e8;" onclick="changeBackground('#f8f0e8')"></div>
            <div class="color-btn" style="background: #e8e8f8;" onclick="changeBackground('#e8e8f8')"></div>
        </div>
        
        <button class="toggle-btn" onclick="toggleInfo()">Xem thêm thông tin</button>
        
        <div class="info-section hidden" id="moreInfo">
            <h3>Thông tin bổ sung:</h3>
            <p>• Đam mê lập trình và công nghệ</p>
            <p>• Đang học các ngôn ngữ: Java, JavaScript, C++</p>
            <p>• Mục tiêu: Trở thành Full-stack Developer</p>
            <p>• Sở thích: Đọc sách, thể thao, âm nhạc</p>
        </div>
        
        <div class="counter">Số lượt nhấn: <span id="count">0</span></div>
        <button class="counter-btn" onclick="increaseCount()">Tăng số</button>
        <button class="counter-btn" onclick="resetCount()">Đặt lại</button>
    </div>

    <script>
        // Đổi màu nền
        function changeBackground(color) {
            document.getElementById('body').style.backgroundColor = color;
        }
        
        // Hiện/ẩn thông tin thêm
        function toggleInfo() {
            const infoSection = document.getElementById('moreInfo');
            const button = document.querySelector('.toggle-btn');
            
            if (infoSection.classList.contains('hidden')) {
                infoSection.classList.remove('hidden');
                button.textContent = 'Ẩn thông tin';
            } else {
                infoSection.classList.add('hidden');
                button.textContent = 'Xem thêm thông tin';
            }
        }
        
        // Đếm số lần nhấn
        let count = 0;
        
        function increaseCount() {
            count++;
            document.getElementById('count').textContent = count;
        }
        
        function resetCount() {
            count = 0;
            document.getElementById('count').textContent = count;
        }
        
        // Đồng hồ
        function updateClock() {
            const now = new Date();
            const time = now.toLocaleTimeString('vi-VN');
            document.getElementById('clock').textContent = time;
        }
        
        setInterval(updateClock, 1000);
        updateClock(); // Cập nhật ngay lần đầu
    </script>
</body>
